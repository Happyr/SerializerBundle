{
    "name": "happyr/serializer-bundle",
    "description": "A bundle on top of Symfony's serializer. This supports annotations",
    "type": "symfony-bundle",
    "keywords": ["serializer", "annotation"],
    "homepage": "http://developer.happyr.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5|^7.0",
        "symfony/serializer": "^2.7|^3.0",
        "symfony/finder": "^2.7|^3.0",
        "doctrine/annotations": "^1.2",
        "twig/twig": "^1.18|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "symfony/symfony": "^2.7|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Happyr\\SerializerBundle\\": ""
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
